%h2 Edit match ##{@match.id}

.row
  .pull-left
    =link_to admin_tournament_matches_path, class: 'btn btn-default' do
      =fa_icon "caret-left", text: "Matches", right: false

.row.top-buffer
  = form_for @match, url: admin_tournament_match_path, method: :put do |f|
    .form-group{class: add_error_class(@match, :first_team_result)}
      = f.label :first_team_result, class: "control-label input-label"
      = f.text_field :first_team_result, class: "form-control"
      .span.help-block= show_errors(@match, :first_team_result)
    .form-group{class: add_error_class(@match, :second_team_result)}
      = f.label :second_team_result, class: "control-label input-label"
      = f.text_field :second_team_result, class: "form-control"
      .span.help-block= show_errors(@match, :second_team_result)
    = f.submit 'Submit', class: "btn btn-default mb-20"
