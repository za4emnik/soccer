%nav.navbar.navbar-default
  .container
    .navbar-header
      %a.navbar-brand{:href => "/"} Soccer
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        - if current_user
          %li
            = link_to 'Tournaments', tournaments_path
        - if current_user&.is_admin?
          %li
            = link_to 'Administration page', admin_root_path
      .nav.navbar-nav.navbar-right
        - if user_signed_in?
          Hello, #{ current_user.email }
          =link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-default navbar-btn'
        - else
          =link_to 'Log in', new_user_session_path, class: 'btn btn-default navbar-btn'
